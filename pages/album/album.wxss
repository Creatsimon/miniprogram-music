/* pages/album/album.wxss */
.t{
    display: flex;
    justify-content: center;
    margin: var(--t--);
}

.img{
    display: flex;
    justify-content: center;
    filter: drop-shadow(1px 10px 10px rgba(75, 75, 75, 0.5));
}

.text{
    display: flex;
    justify-content: center;
    margin: 0 30rpx;
}

.dec{
    font-size: 30rpx;
    font-weight: 500;
    display: flex;
    margin: 0 30rpx;
}


.external-class {
    height: 200rpx;
  }

  .block {
    width: 100vw;
    height: var(--h--);
    background: #fff;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
  }
  
  .wrapper {
    margin: 32rpx;
    display: block;
  }
  
  .header {
    display: flex;
    align-items: center;
    height: 116rpx;
  }
  
  .title {
    flex: 1;
    text-align: center;
    font-weight: 600;
    font-size: 36rpx;
  }

  .custom-navbar {
    float: left;
    --td-navbar-color: #fff;
    --td-navbar-bg-color: transparent;
  }

  .custom-navbar2 {
    --td-navbar-color: black;
    --td-navbar-bg-color: white;
    overflow: hidden;
  }

  .custom-title {
    margin-left: 16rpx;
    font-size: 36rpx;
    font-weight: 600;
  }

  .p{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -moz-box;
    -moz-line-clamp: 2;
    -moz-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal;    
  }

  .p1{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -moz-box;
    -moz-line-clamp: 1;
    -moz-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal;    
  }

 

  