/* pages/playlistDetails/playlistDetails.wxss */
page{
    background: white;
  }
.col {
    width:100%;
    height:100%;
    display:flex;
    justify-content:center;
  }

  .nicheng{
    display: flex;
    justify-content: center;
    margin: 20rpx 0;
}

.test {
    --td-cell-group-color:red;
  }

  .dialog-image {
    width: 100%;
    height: 160px;
  }

  .long-content {
    height: 300rpx;
    margin-top: 16rpx;
    font-size: 32rpx;
    color: #888;
  }


  .t{
    display: flex;
    justify-content: center;
    margin: var(--t--);
}

.img{
    display: flex;
    justify-content: center;
}

.p{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -moz-box;
    -moz-line-clamp: 2;
    -moz-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal;    
  }

  .p1{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -moz-box;
    -moz-line-clamp: 1;
    -moz-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
    white-space: normal;    
  }

  .header {
    display: flex;
    align-items: center;
    height: 116rpx;
  }
  
  .title {
    flex: 1;
    text-align: center;
    font-weight: 600;
    font-size: 36rpx;
  }

  .block2 {
    width: 100vw;
    height: var(--h--);
    background: #fff;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
  }

